CXXFLAGS = -std=c++98 -Wall -Wextra -Werror

NAME = convert
CC = c++
SRCS = ./main.cpp ./ScalarConverter.cpp

OBJS = $(SRCS:.cpp=.o)
	
%.o: %.cpp
	$(CC) $(CXXFLAGS) -c $< -o $@

$(NAME): $(OBJS)
	$(CC) $(CXXFLAGS) $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)
	
re: fclean $(NAME)